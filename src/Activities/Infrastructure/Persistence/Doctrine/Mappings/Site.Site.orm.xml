<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Activities\Domain\Site\Site" table="site"
            repository-class="App\Activities\Infrastructure\Persistence\Doctrine\Repository\SiteRepositoryMySql">
        <id name="id" type="Id">
            <generator strategy="NONE"/>
        </id>
        <field name="name" column="name" type="string"/>
        <field name="address" column="address" nullable="true" type="string"/>
        <field name="postalCode" column="postalCode" nullable="true" type="string"/>
        <field name="municipiId" column="municipiId" nullable="true" type="string"/>
        <field name="coordinates" column="coordinates" nullable="true" type="string"/>
    </entity>
</doctrine-mapping>
