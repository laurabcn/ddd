<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Activities\Domain\Provincia\Provincia" table="provincia"
            repository-class="App\Activities\Infrastructure\Persistence\Doctrine\Repository\ProvinciaRepositoryMySql">
        <id name="id" type="guid">
            <generator strategy="NONE"/>
        </id>
        <field name="name" column="name" type="string"/>
        <many-to-many field="municipi" target-entity="App\Activities\Domain\Provincia\Municipi">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="provincia_municipis">
                <join-columns>
                    <join-column name="provincia_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="municipi_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
